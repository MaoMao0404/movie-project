/* component/category-nav/category-nav.wxss */
.category-navlist{
	position: relative;
  padding-left: 20rpx;
  width: 100%;
  height: 90rpx;
  user-select: none;
  white-space: nowrap;
  overflow-x: scroll;
}

.category-navlist .navlist-item{
	box-sizing: border-box;
	display: inline-block;
	margin: 0 10rpx;
	padding: 0 25rpx;
	height: 60rpx;
	line-height: 56rpx;
	border-radius: 40rpx;
	transition: all 0.2s;
	/* color: var(--color-text-main); */
}
.category-navlist::-webkit-scrollbar {
	display: none
}
.navlist-item:nth-child(1){
	margin-left: 0rpx;
}

.is-active{
	color: #fff;
	background: var(--color-border-main);
}
.fixed{
	z-index: 1;
	position: fixed;
	top: 0;
	width: 700rpx;
	height: 60rpx;
	background-color: var(--color-border-main);
	border-radius: var(--border-radius-all);
	color: #fff;
	text-align: center;
	line-height: 60rpx;
	font-size: 34rpx;
}