/* component/article/article.wxss */
.article-item {
	position: relative;
	background-color: #fff;
}

.article-item:nth-last-child(1)::after {
	display: none;
}

.title {
	white-space: normal;
	text-align: justify;
	font-weight: var(--weight-font-main);
	font-size: 28rpx;
	color: var(--color-border-main);
	line-height: 40rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	line-clamp: 2;
	-webkit-box-orient: vertical;
}


.article-content {
	display: flex;
	height: 88rpx;
	color: var(--color-text-second);
	padding-top: 16rpx;
	padding-left: 16rpx;
}

.article-brief {
	line-height: 1.6;
	font-size: 28rpx;
	text-overflow: -o-ellipsis-lastline;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	line-clamp: 2;
	-webkit-box-orient: vertical;
	white-space: normal;
}

.article-cover {
	position: relative;
	margin-left: 12rpx;
	width: 160rpx;
	flex-shrink: 0;
}

.cover {
	position: absolute;
	bottom: 6rpx;
	width: 160rpx;
	height: 120rpx;
	object-fit: cover;
	border-radius: 6rpx;
	background-color: #f5f5f5;
}



.article-footer {
	margin-top: 12rpx;
	display: flex;
	align-items: center;
	height: 48rpx;
	font-size: 24rpx;
	color: var(--color-text-end);
}

.tool-item__delimiter {
	margin: 0 16rpx;
}
.clear{
	margin: 18rpx 0;
	height: 2rpx;
	background-color: rgb(238, 238, 238);
}