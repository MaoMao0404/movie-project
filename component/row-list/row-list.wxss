/* component/row-list/row-list.wxss */
.movie-row {
	box-sizing: border-box;
	position: relative;
	vertical-align: top;
	display: inline-block;
	width: 188rpx;
	margin-bottom: 30rpx;
}


.movie-row__poster {
	position: relative;
	width: 100%;
	height: 268rpx;
	overflow: hidden;
	border-radius: 10rpx;
}

.poster {
	width: 188rpx;
	height: 268rpx;
	background-color: rgba(#f5f5f5, 0.45);
}

.movie-row__info {
	position: absolute;
	left: 0;
	bottom: 0;
	height: 60rpx;
	width: 100%;
	font-size: 24rpx;
	line-height: 72rpx;
	background: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.45));
}

.movie-row__info.white {
	color: #fff;
}

.rating {
	float: right;
	color: orange;
	font-weight: 400;
}

.movie-row__title {
	padding-top: 12rpx;
	line-height: 36rpx;
	font-size: 28rpx;
	font-weight: 550;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	color: var(--color-text-main);
}