/* component/video-rowlist/video-rowlist.wxss */
.video-item {
	display: inline-block;
	position: relative;
	margin-right: 16rpx;
	width: 310rpx;
	height: 180rpx;
	border-radius: 4rpx;
	overflow: hidden;
}

.video-poster {
	width: 310rpx;
	height: 180rpx;
	background-color: #f7f7f7;
}

.video-footer {
	position: absolute;
	left: 0;
	bottom: 0;
	right: 0;
	padding: 0 16rpx;
	height: 52rpx;
	line-height: 52rpx;
	color: #fff;
	font-size: 24rpx;
	background-image: linear-gradient(transparent 0%, rgba(0, 0, 0, 0.3) 100%);
}