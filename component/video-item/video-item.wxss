/* component/video-item/video-item.wxss */
@import '/static/style/icon.wxss';

.video-item {
	box-sizing: border-box;
	margin-top: 20rpx;
}

.video-content {
	position: relative;
}

.video {
	width: 100%;
	height: 423rpx;
	display: block;
	position: absolute;
	left: 0;
	top: 0;
	z-index: 999;
	background: #fff;
	overflow: hidden;
}

.video-poster{
	width: 100%;
	height: 100%;
	border-radius: 10rpx;
	background-size: contain;
}

.video-player {
	display: block;
	width: 100%;
	height: 423rpx;
}

.video-cover {
	position: relative;
	margin: 0 10rpx;
	height: 423rpx;
	color: #fff;
	border-radius: 20rpx;
	overflow: hidden;
}

.video-title {
	z-index: 1;
	position: absolute;
	left: 0;
	top: 0;
	right: 0;
	padding: 20rpx;
	font-size: 32rpx;
	line-height: 1.6;
	background-image: linear-gradient(rgba(0, 0, 0, 0.45),
			rgba(255, 255, 255, 0));
	font-size: 30rpx;
}

.video-poster {
	width: 100%;
	height: 100%;
	object-fit: cover;
}

.video-play {
	position: absolute;
	top: 50%;
	left: 50%;
	width: 80rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	border-radius: 50%;
	background-color: rgba(0, 0, 0, 0.35);
	transform: translate(-50%, -50%);
}

.play-icon {
	font-size: 40rpx;
	margin-left: 10rpx;
}

.video-info {
	z-index: 1;
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
	padding: 20rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	background-image: linear-gradient(rgba(255, 255, 255, 0),
			rgba(0, 0, 0, 0.45));
	font-size: 26rpx;
}

.video-footer {
	display: flex;
	align-items: center;
	padding: 0 20rpx;
	height: 88rpx;
}

.video-author {
	display: flex;
	align-items: center;
}

.author-avatar {
	width: 56rpx;
	height: 56rpx;
	border-radius: 50%;
	background-color: #f5f5f5;
}

.author-name {
	margin-left: 12rpx;
	font-weight: bold;
	color: var(--color-text-main);
}

.space {
	flex: 1;
	height: 88rpx;
}

.video-tool {
	display: flex;
	align-items: center;
}

.tool-item {
	display: flex;
	align-items: center;
	margin-left: 20rpx;
	height: 56rpx;
}

.tool-item-icon {
	font-size: 28rpx;
	color: var(--color-text-end);
}

.tool-item-count {
	margin: 0 8rpx;
	font-size: 24rpx;
	color: var(--color-text-second);
}