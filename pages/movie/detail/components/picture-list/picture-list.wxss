
.picture-row {
	box-sizing: border-box;
	position: relative;
	vertical-align: top;
	display: inline-block;
	width: 150rpx;
}

.picture-row__poster {
	position: relative;
	width: 100%;
	height: 200rpx;
	overflow: hidden;
	border-radius: 10rpx;
	background-color: #000;
}

.poster {
	width: 150rpx;
	height: 200rpx;
	background-color: rgba(#f5f5f5, 0.45);
}




