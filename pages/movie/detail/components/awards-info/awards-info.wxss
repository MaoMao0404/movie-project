/* pages/movie/detail/components/awards-info/awards-info.wxss */
.awards-content{
	box-sizing: border-box;
	display: flex;
	align-items: center;
	justify-content:space-around;
	height:170rpx;
	background-color: var(--backgroundColor-movie);
	border-radius:10rpx;
	text-align: center;
}
.awards-content .awards-item{
	color: var(--color-text-main);
}
.awards-content .awards-item .title{
	font-size: 30rpx;
	font-weight:550;
	margin-bottom: 20rpx;
}
.awards-content .awards-item .score{
	font-size: 40rpx;
	font-weight:550;
}
.awards-content .awards-item .award{
	font-size: 30rpx;
	font-weight:550;
}
.awards-content .awards-item .normal{
	font-size: 24rpx;
	font-weight: 500;
}