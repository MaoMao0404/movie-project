/* pages/actor/detail/components/actor-rowlist/actor-rowlist.wxss */
.actor-row {
	box-sizing: border-box;
	position: relative;
	vertical-align: top;
	display: inline-block;
	width: 188rpx;
	margin-bottom: 30rpx;
}


.actor-row__poster {
	position: relative;
	width: 100%;
	height: 268rpx;
	overflow: hidden;
	border-radius: 10rpx;
}

.poster {
	width: 188rpx;
	height: 268rpx;
	background-color: rgba(#f5f5f5, 0.45);
}

.actor-row__title {
	padding-top: 12rpx;
	line-height: 36rpx;
	font-size: 28rpx;
	font-weight: 550;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	color: var(--color-text-main);
}
.actor-row .profession{
	box-sizing: border-box;
	margin-top: 8rpx;
	color: var(--color-text-second);
	font-size: 26rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
