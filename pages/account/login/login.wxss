/* pages/account/login/login.wxss */
@import '/static/style/icon.wxss';
.login {
	position: relative;
	min-height: 100vh;
}
.images{
	box-sizing: border-box;
	position: relative;
	width: 128rpx;
	height: 128rpx;
	margin: 0 auto;
	margin-top: 140rpx;
	border: 2px solid var(--color-border-main);
	border-radius: 50%;
}
.images .img{
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	margin: auto;
	width: 70%;
	height: 70%;
}

/* 表单 */
.form {
	padding: 30rpx 80rpx 0;
}

.form-item {
	display: flex;
	align-items: center;
	position: relative;
	margin-top: 40rpx;
	padding: 0 32rpx;
	height: 82rpx;
	border: 2px solid var(--color-line);
	border-radius: 40rpx;
}
.clearicon{
	padding: 10rpx;
	font-size: 30rpx;
	font-weight: 600;
	color: var(--color-text-end);
}

.input {
	flex: 1;
	position: relative;
	height: 80rpx;
	line-height: 80rpx;
	font-size: 28rpx;
	border: none;
	background-color: #fff;
}

.input.placeholder {
	color: var(--color-text-second);
}

.see-icon {
	padding: 4rpx;
	font-size: 40rpx;
	font-weight: 600;
	color: var(--color-text-second);
}

.is-show {
	padding: 4rpx;
	font-size: 40rpx;
	font-weight: 600;
	color: black;
}

.submit {
	padding-top: 100rpx;
}
.submit .btn{
	border-radius: 40rpx;
	background-color: var(--backgroundColor-main);
	color: #fff;
}

.tool {
	display: flex;
	justify-content: space-between;
	margin-top: 50rpx;
	padding: 0 80rpx;
	font-size: 24rpx;
	color: var(--color-text-second);
}